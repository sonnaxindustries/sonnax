<div id="product-line" class="torque-converter">
  <h1>New Parts for <%= @product_line.name %></h1>
  
  <div class="options group">
    <ul>
      <li><%= link_to 'Speed Order Form', order_info_product_line_path(@product_line.url_friendly) %></li>
      <li><%= link_to 'Friction Ring Details', '/downloads/torque-converter/SonnaxFrictonRingDetail.pdf', :class => 'pdf' %></li>
      <li><%= link_to "Bearing &amp; Seal Details", '/downloads/torque-converter/SonnaxBearingSealDetails.pdf', :class => 'pdf' %></li>
    </ul>
  </div>
  
  <div class="parts-wrapper">
    <% if @parts.any? %>
      <%= render :partial => 'product_lines/torque_converter/new_parts', :locals => { :product_line => @product_line, :parts => @parts } %>
    <% else %>
      <%= render :partial => 'product_lines/torque_converter/no_parts', :locals => { :product_line => @product_line } %>
    <% end %>
  </div>
</div>
