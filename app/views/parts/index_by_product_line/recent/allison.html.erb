<div id="product-line" class="allison">
  <h1>New Parts for <%= @product_line.name %></h1>
  <p>This list will change as new product arrives so please check back frequently.</p>
  
  <div class="parts-wrapper">
    <% if @parts.any? %>
      <%= render :partial => 'product_lines/allison/parts', :locals => { :product_line => @product_line, :parts => @parts } %>
    <% else %>
      <%= render :partial => 'product_lines/allison/no_parts', :locals => { :product_line => @product_line } %>
    <% end %>
  </div>
</div>