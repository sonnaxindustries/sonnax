<div id="units">
  <h1>Units</h1>
  <div class="search-box group">
    <% form_tag admin_search_units_path, :method => :post do %>
      <fieldset>
        <legend>Search</legend>
        
        <div class="text search-units search">
          <%= label_tag :q, 'Search Term' %>
          <%= text_field_tag :q, params[:q] %>
        </div>
        
        <div class="submit">
          <%= submit_tag 'Search' %>
        </div>
      </fieldset>
    <% end %>
  </div>
  
  <div class="add-new"><%= link_to 'Add New Unit', new_admin_unit_path, :class => 'create' %></div>
  <% if @units.any? %>
    <table cellpadding="0" cellspacing="0" summary="Listing of Units" width="100%">
      <thead>
        <tr>
          <th>Name</th>
          <th>Product Line</th>
          <th class="options"></th>
        </tr>
      </thead>
      <tbody>
        <% @units.each do |unit| %>
        <tr id="<%= dom_id(unit) %>">
          <td><%= unit.name %></td>
          <td><%= unit.product_line.name %></td>
          <td class="options">
            <ul>
              <li><%= link_to 'Edit', edit_admin_unit_path(unit), :class => 'edit' %></li>
            </ul>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate(@units, :class => 'digg_pagination') %>
  <% else %>
  <p>There are no Units.</p>
  <% end %>
</div>