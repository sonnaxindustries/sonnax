<h1>Edit: <%= @unit.name %></h1>
<ul>
  <li><%= link_to 'Delete', admin_unit_path(@unit), :class => 'destroy-html', :method => :delete, :confirm => 'Are you sure you want to delete this Unit?' %></li>
</ul>
<% form_for :unit, @unit, :url => admin_unit_path(@unit), :html => { :method => :put } do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  
  <div class="submit">
    <%= f.submit 'Save' %> or <%= link_to 'Cancel', admin_units_path, :class => 'cancel' %>
  </div>
<% end %>