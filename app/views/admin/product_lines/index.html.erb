<div id="product-lines">
  <h1>Product Lines</h1>
  <div class="add-new"><%= link_to 'Add New Product Line', new_admin_product_line_path, :class => 'create' %></div>
  <% if @product_lines.any? %>
    <table cellpadding="0" cellspacing="0" summary="Listing of Product Lines" width="100%">
      <thead>
        <tr>
          <th>Name</th>
          <th>Published</th>
          <th>Sort Order</th>
          <th class="options"></th>
        </tr>
      </thead>
      <tbody>
        <% @product_lines.each do |product_line| %>
        <tr id="<%= dom_id(product_line) %>">
          <td><%= product_line.name %> <% if DB_EDITABLE.include?(product_line.id) %><span><%= link_to 'Manage Parts', admin_product_line_parts_path(product_line.id) %></span><% end %></td>
          <td><%= product_line.published_status %></td>
          <td><%= product_line.sort_order %></td>
          <td class="options">
            <ul>
              <li><%= link_to 'Edit', edit_admin_product_line_path(product_line), :class => 'edit' %></li>
            </ul>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <p>There are no product lines.</p>
  <% end %>
</div>
