<h1>Edit: <%= @part.part_number %></h1>
<ul>
  <li><%= link_to 'Delete', admin_part_path(@part), :class => 'destroy-html', :method => :delete, :confirm => 'Are you sure you want to destroy this Part?' %></li>
</ul>

<h2>Attached Resources</h2>
<ul>
  <li><%= link_to 'Add a new Asset (Resource)', new_admin_part_part_asset_path(@part) %></li>
</ul>
<% if @part.part_assets? %>
<table cellpadding="0" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>File Name</th>
      <th>Name</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @part.part_assets.each do |pa| %>
    <tr>
      <td><%= pa.asset.asset_file_name %></td>
      <td><%= pa.name %></td>
      <td><%= link_to 'Edit', edit_admin_part_part_asset_path(@part, pa) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% form_for :part, @part, :url => admin_part_path(@part), :html => { :multipart => true, :method => :put } do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  
  <div class="submit">
    <%= f.submit 'Save' %> or <%= link_to 'Cancel', admin_parts_path, :class => 'cancel' %>
  </div>
<% end %>
