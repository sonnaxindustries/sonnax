<h1>Edit: <%= @publication_author.full_name %></h1>
<ul>
  <li><%= link_to 'Delete', admin_publication_author_path(@publication_author), :class => 'destroy-html', :method => :delete, :confirm => 'Are you sure you want to delete this Author?' %></li>
</ul>
<% form_for :publication_author, @publication_author, :url => admin_publication_author_path(@publication_author), :html => { :method => :put } do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  
  <div class="submit">
    <%= f.submit 'Save' %> or <%= link_to 'Cancel', admin_publication_authors_path, :class => 'cancel' %>
  </div>
<% end %>
