<div id="publication-categories">
  <h1>Publication Categories</h1>

  <div class="add-new"><%= link_to 'Add New Category', new_admin_publication_category_path, :class => 'create' %></div>
  <% if @publication_categories.any? %>
    <table cellpadding="0" cellspacing="0" summary="Listing of Publication Categories" width="100%">
      <thead>
        <tr>
          <th>Name</th>
          <th class="options"></th>
        </tr>
      </thead>
      <tbody>
        <% @publication_categories.each do |publication_category| %>
        <tr id="<%= dom_id(publication_category) %>">
          <td><%= publication_category.name %></td>
          <td class="options">
            <ul>
              <li><%= link_to 'Edit', edit_admin_publication_category_path(publication_category), :class => 'edit' %></li>
              <li><%= link_to 'Delete', admin_publication_category_path(publication_category), :class => 'destroy' %></li>
            </ul>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <p>There are no Publication Categories.</p>
  <% end %>
</div>