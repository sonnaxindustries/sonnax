<div id="distributors">
  <h1>Distributors</h1>
  
  <% form_for :country, @country_form_presenter, :url => @country_form_presenter.url, :html => { :method => :get } do |f| %>
  <fieldset>
    <legend>Filter by Country</legend>
    
    <div class="select country">
      <%= f.label :country_code, 'Locate a Transmission Distributor' %>
      <%= f.select :country_code, @country_form_presenter.country_options, :selected => @country_form_presenter.selected %>
    </div>
    
    <div class="submit">
      <%= f.submit 'Go' %>
    </div>
  </fieldset>
  <% end %>
  
  <% if @distributors.any? %>
    <table cellpadding="0" cellspacing="0" class="tablesorter" summary="Listing of Distributors" width="100%">
      <thead>
        <tr>
          <th>Name</th>
          <th>City</th>
          <th>State</th>
          <th>Telephone</th>
          <th>Company URL</th>
        </tr>
      </thead>
      <tbody>
        <% @distributors.each do |distributor| %>
        <tr>
          <td><%= distributor.name %><% if distributor.has_multiple_locations? %> *<% end %></td>
          <td><%= distributor.city %></td>
          <td><%= distributor.state %></td>
          <td><%= distributor.phone_number %></td>
          <td><%= link_to distributor.website_url, distributor.website_url.to_s, :rel => 'external' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <p class="notice">* Stocking distributors with multiple locations. Please call for more information.</p>
  <% else %>
  <p>There are no distributors.</p>
  <% end %>
</div>
