    </ul>
  </div>
  
  <div id="col-2">
    <div class="valve-body-layouts group">
      <%= link_to image_tag('transmission/722-6-VB-home.jpg', :width => 350, :height => 151, :alt => 'Valve Body Layouts'), valve_body_layouts_path %>
