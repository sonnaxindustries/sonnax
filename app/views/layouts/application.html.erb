  <body id="home">
    <div id="container" class="group">
      <div id="container-inner">
        <div id="masthead">
          <h1><%= link_to 'Sonnax', root_path %></h1>
          <ul class="group">
            <li class="home"><%= link_to 'Home', root_path %></li>
            <li class="product-lines">
              <%= link_to 'Product Lines', product_lines_path %>
              <% if @product_lines_nav.any? %>
              <ul>
                <% @product_lines_nav.each do |nav| %>
                <li><%= link_to nav.name, product_line_path(nav.url_friendly) %></li>
                <% end %>
              </ul>
              <% end %>
            </li>
            <li class="search"><%= link_to 'Quick Search', quick_search_path %></li>
            <li class="how-to-order"><%= link_to 'How to Order', how_to_order_path %></li>
            <li class="technical-library"><%= link_to 'Technical Library', technical_library_path %></li>
            <li class="about-us">
              <%= link_to 'About Us', about_us_path %>
              <ul>
                <li><%= link_to 'History/Mission', history_mission_path %></li>
                <li><%= link_to 'Sonnax International', international_info_path %></li>
                <li><%= link_to 'TASC Force &trade;', tasc_force_path %></li>
                <li><%= link_to 'Catalog Request', catalog_request_path %></li>
                <li><%= link_to 'Career Opportunities', career_opportunities_path %></li>
                <li><%= link_to 'Schedule of Events', events_list_path %></li>
                <li><%= link_to 'Sonnax News', news_list_path %></li>
                <li><%= link_to 'Contact Us', new_contact_path %></li>
              </ul>
            </li>
          </ul>
        </div>

        <div id="wrapper" class="group">
          <div id="wrapper-inner" class="group">
            <%= yield %>
          </div>
        </div>

        <div id="extra" class="group">
          <p class="addr">Sonnax &#8211; 1 Automatic Drive &#8211; Bellows Falls &#8211; Vermont &#8211; 05191-0440</p>
          <p class="communication">900-843-2600 &#8211; 802-463-9722 &#8211; <%= mail_to 'info@sonnax.com' %></p>
        </div>
      </div>
    </div>
    
    <div id="disclaimer" class="group">
      <p>&copy; <%= Date.today.year %> Sonnax Industries, Inc. Sonnax Transmission, Torque Converter, Performance, Driveline, Allison &reg; Replacement Parts for automotive aftermarket rebuilders.</p>
