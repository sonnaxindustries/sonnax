<div id="contact">
  <h1>Contact Sonnax with questions or comments</h1>
  <dl>
    <dt>Phone</dt>
    <dd>For telephone assistance with any Sonnax product related questions, during regular business hours
    (8:30 am – 5:00 pm, Mon – Fri. ET) call: (800) 843-2600 or (802) 463-9722.</dd>

    <dt>Email</dt>
    <dd>For email assistance with any Sonnax product related issues or other concerns, submit your 
    questions or comments below.</dd>
  </dl>

  <% form_for :contact, @contact, :url => contact_path do |f| %>
    <%= f.hidden_field :department_id %>
    <fieldset>
      <legend>Your Information</legend>

      <div class="text name">
        <%= f.error_message_on :name %>
        <%= f.label :name, '<span class="required">*</span> Your Name' %>
        <%= f.text_field :name %>
      </div>

      <div class="text email">
        <%= f.error_message_on :email %>
        <%= f.label :email, '<span class="required">*</span> Your E-Mail Address' %>
        <%= f.text_field :email %>
      </div>

      <div class="text company">
        <%= f.error_message_on :company %>
        <%= f.label :company, '<span class="required">*</span> Company Name' %>
        <%= f.text_field :company %>
      </div>

      <div class="text phone-number">
        <%= f.error_message_on :phone_number %>
        <%= f.label :phone_number, '<span class="required">*</span> Phone Number' %>
        <%= f.text_field :phone_number %>
      </div>

      <div class="textarea message">
        <%= f.error_message_on :message %>
        <%= f.label :message, '<span class="required">*</span> Your Message' %>
        <%= f.text_area :message, :rows => 10, :cols => 30 %>
      </div>

      <div class="submit">
        <p><%= f.submit 'Send' %></p>
      </div>
    </fieldset>
  <% end %>
</div>
