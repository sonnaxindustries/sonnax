<h2>Publications</h2>
<% if @publication_categories.any? %>
  <% @publication_categories.each do |category| %>
    <h3><%= link_to category.name, publication_category_path(category.url_friendly) %></h3>
    <% if category.publications? %>
      <% category.publications.each do |publication| %>
        <p>-- <%= link_to publication.title, publication_category_publication_title_path(category.url_friendly, publication.url_friendly) %></p>
      <% end %>
    <% end %>
  <% end -%>
<% else %>
<p>There are no Publications at this time.</p>
<% end %>